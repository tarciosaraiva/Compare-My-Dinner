<resources>

    <!-- Header Styles -->
    <style name="header">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:background">@drawable/header_bg</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="header_logo">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/lbl_padding</item>
        <item name="android:contentDescription">@string/app_name</item>
        <item name="android:src">@drawable/logo</item>
    </style>

    <style name="header_name">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_margin">@dimen/lbl_padding</item>
        <item name="android:text">@string/app_name</item>
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Home screen buttons -->
    <style name="search_button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/button</item>
        <item name="android:background">@drawable/search_button</item>
    </style>

    <style name="compare_button" parent="search_button">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/compare_button</item>
    </style>

    <!-- Text styles -->
    <style name="food_name">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20dip</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
        <item name="android:paddingLeft">@dimen/list_padding</item>
        <item name="android:paddingRight">@dimen/list_padding</item>
        <item name="android:paddingTop">@dimen/sublist_padding</item>
    </style>

    <style name="food_descr" parent="food_name">
        <item name="android:textSize">10dip</item>
        <item name="android:paddingTop">0dip</item>
        <item name="android:paddingBottom">@dimen/sublist_padding</item>
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="food_serving" parent="food_descr">
        <item name="android:textSize">15dip</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="nutrientInfo">
        <item name="android:textColor">@color/dark_blue</item>
        <item name="android:background">@drawable/text_lines</item>
        <item name="android:padding">@dimen/lbl_padding</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/lbl_padding</item>
    </style>

    <style name="nutrientInfoL" parent="nutrientInfo">
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="DialogTextMedium">
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="DialogTextSmall">
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="attribution_button">
        <item name="android:textSize">@dimen/text_size_tiny</item>
        <item name="android:textColor">@color/blue</item>
        <item name="android:background">@color/white</item>
    </style>

</resources>